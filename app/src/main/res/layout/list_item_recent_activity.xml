<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cont_item_root"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    app:cardElevation="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_student_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="98%" />

        <ImageView
            android:id="@+id/img_transaction_icon"
            android:layout_width="59dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:src="@drawable/placeholder" />

        <TextView
            android:id="@+id/txt_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="16dp"
            android:text="P150"
            android:textSize="14sp"
            android:textColor="@color/light_red"
            android:layout_alignBaseline="@+id/txt_student_grade"
            android:layout_alignBottom="@+id/txt_student_grade"
            android:layout_alignParentEnd="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/img_transaction_icon"
            android:layout_marginStart="16dp"
            android:weightSum="1">

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_type"
                android:textSize="18sp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="McDo"
                android:textSize="12sp"
                android:id="@+id/txt_details" />

        </LinearLayout>

    </RelativeLayout>






</android.support.v7.widget.CardView>

